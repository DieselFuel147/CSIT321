<script>
  function updateCount()
  {

    {{#if devices}}
      {{#each devices}}
      
        var timeNow = new Date();
        var lastUpdate = document.getElementById("update{{@key}}");
        var piUpdate = new Date(lastUpdate.textContent);
        piUpdate.setMinutes(piUpdate.getMinutes() + 1); /* Could set this to be more aggressive. grr */
        timeNow.getTime();


        var peopleDetecting = false;
        if ({{this.people}} > 0 && piUpdate > timeNow){ /* This means we recieved data in the last minute. */
         var labelSuccess = document.getElementById("label{{@key}}");
         labelSuccess.className = "label label-success";
         labelSuccess.innerHTML = "Detecting";

         var status = document.getElementById("status{{@key}}");
          status.innerHTML = "Detecting"
        }
        else{
          var fail = document.getElementById("label{{@key}}");  // Change to IDLE
          fail.className = "label label-warning";
          fail.innerHTML = "Idle";

          var status = document.getElementById("status{{@key}}");
          status.innerHTML = "Idling"
          
          var people = document.getElementById("device{{@key}}");
          people.innerHTML = "0";
        }

        if (piUpdate > timeNow)
        {
          peopleDetecting = true; // We are detecting people again!
        }
       
        if (peopleDetecting)
        {
          $("#device{{@key}}").load("/dashboard #device{{@key}}");  // Update peoplecount only when we detect people
        }
        $("#update{{@key}}").load("/dashboard #update{{@key}}");
      {{/each}}
    {{/if}}
    setTimeout(updateCount, 2000); // Refresh the data every two seconds.
  }
updateCount();
</script>
