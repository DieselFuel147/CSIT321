<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Hive Dashboard
        <small>An in-depth overview of your hive</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
  <div class="row">
    <div class="col-md-3 col-sm-6 col-xs-12">
          <div class="info-box">
            <span class="info-box-icon bg-aqua"><i class="ion ion-ios-outlet"></i></span>

            <div class="info-box-content">
              <span class="info-box-text">Devices Online</span>
              <span class="info-box-number" id="devicesCounter">0/0</span>
            </div>
            <!-- /.info-box-content -->
          </div>
          <!-- /.info-box -->
        </div>
        <div class="col-md-3 col-sm-6 col-xs-12">
              <div class="info-box">
                <span class="info-box-icon bg-yellow"><i class="ion ion-ios-walk"></i></span>

                <div class="info-box-content">
                  <span class="info-box-text">Current Total</span>
                  <span class="info-box-number" id="totalDetected">0</span>
                </div>
                <!-- /.info-box-content -->
              </div>
              <!-- /.info-box -->
        </div>
        <div class="col-md-3 col-sm-6 col-xs-12">
              <div class="info-box">
                <span class="info-box-icon bg-green"><i class="ion ion-ios-stats"></i></span>

                <div class="info-box-content">
                  <span class="info-box-text">Difference</span>
                  <span class="info-box-number" id="diffYesterday">+0%</span>
                  <span class="info-box-text">from yesterday</span>
                </div>
                <!-- /.info-box-content -->
              </div>
              <!-- /.info-box -->
        </div>
        <div class="col-md-3 col-sm-6 col-xs-12">
              <div class="info-box">
                <span class="info-box-icon bg-blue"><i class="ion ion-ios-heart"></i></i></span>

                <div class="info-box-content">
                  <span class="info-box-text">Most Popular</span>
                  <span class="info-box-number" id="mostPopular">None</span>
                </div>
                <!-- /.info-box-content -->
              </div>
              <!-- /.info-box -->
        </div>


  </div>
	<div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Hive Status</h3>

              <div class="box-tools">
                <div class="input-group input-group-sm" style="width: 150px;">
                  <input type="text" name="table_search" class="form-control pull-right" placeholder="Search" aria-label="search">

                  <div class="input-group-btn">
                    <button type="submit" class="btn btn-default" aria-label="search"><i class="fa fa-search"></i></button>
                  </div>
                </div>
              </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding" id="deviceBox">
              <table class="table table-hover" id="statusTable">
                <thead>
                  <th>ID</th>
                  <th>Location</th>
                  <th>Latest Detection</th>
                  <th>Last Update</th>
                  <th>Status</th>
                  <th>Information</th>
                </thead>
                {{#if devices}}
                  {{#each devices}}
                  <tr id="mainTable{{@key}}">
                    <td>{{@key}}</td> 
                    <td>{{this.description}}</td>
                    <td id="device{{@key}}"></td>
                    <td id="update{{@key}}">{{this.last_update}}</td>
                    <td><span class="label label-success" id="label{{@key}}"></span></td>
                    <td id="status{{@key}}"></td>
                  </tr>
                  {{/each}}
                {{/if}}
              </table>
            </div>
          </div>
        </div>
  </div>
  <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <div class="box-header">
            <h3 class="box-title">Traffic Rankings</h3>

            <div class="box-tools pull-right">
              <div class="form-group">
                <select id="rankTimeSelect" class="form-control" aria-label="Traffic time selection">
                  <option value="today">Today</option>
                  <option value="week">This week</option>
                  <option value="month">This month</option>
                  <option value="year">This year</option>
                </select>
              </div>
            </div>
          </div>
          <!-- /.box-header -->
          <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
              <thead>
                <th>
                  <th>Location</th>
                  <th>Average People</th>
                  <th>Maximum People</th>
                  <th>Percentage of Traffic</th>
                  <th>Operating Device</th>
                </th>
              </thead>
              <tbody id="rankTable">
                {{#if devices}}
                  {{#each devices}}
                    <tr>
                      <td>#{{@key}}</td>
                      <td>{{this.description}}</td>
                      <td>0</td>
                      <td>0</td>
                      <td>0%</td>
                      <td>
                        <a href="/dashboard/bees/{{this.uuid}}">
                        <div style="height:100%";"width:100%">Bee #{{this.uuid}}</div>
                      </td>
                    </tr>
                  {{/each}}
                {{/if}}
              </tbody>
            </table>
          </div>
          <!-- /.box-body -->
        </div>
      </div>
    </div>

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <script type="text/javascript" src="/js/device_refresh.js"></script>